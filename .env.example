# =============================================================================
# Global Trust Bank - Loan Workflow System
# Environment Configuration Template
# =============================================================================
# 
# Instructions:
# 1. Copy this file to `.env` in the same directory
# 2. Replace placeholder values with your actual configuration
# 3. Never commit the `.env` file to version control
#
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Application Settings
# -----------------------------------------------------------------------------

# Environment: development | production | testing
FLASK_ENV=development

# Secret key for session management (generate a strong random key for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Server port (default: 5000 for dev, 8000 for production)
PORT=5000

# -----------------------------------------------------------------------------
# Azure Cosmos DB Configuration
# -----------------------------------------------------------------------------

# Cosmos DB REST API endpoint
COSMOS_API_BASE_URL=https://cosmosdb-api-h3f2fnbth2dccaed.eastus2-01.azurewebsites.net

# API request timeout in seconds
COSMOS_API_TIMEOUT=30

# -----------------------------------------------------------------------------
# AI Agent Configuration (Azure AI Foundry)
# -----------------------------------------------------------------------------

# Agent processing timeout in seconds
AGENT_PROCESSING_TIMEOUT=60

# Enable auto-processing mode (true/false)
ENABLE_AUTO_PROCESS=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable mock data fallback when Cosmos DB is unavailable (true/false)
ENABLE_MOCK_DATA=true

# Enable Cosmos DB integration (true/false)
ENABLE_COSMOS_INTEGRATION=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Azure Web App Settings (Production Only)
# -----------------------------------------------------------------------------

# Azure sets these automatically, but you can override if needed
# WEBSITE_PORT=8000
# WEBSITES_ENABLE_APP_SERVICE_STORAGE=true

